<!DOCTYPE html>
{% macro displayCategories() %}
    <div class="row p-3 d-flex justify-content-center">
        <a href="/general" id="/general" onmouseover="toggleSelected(this)" onmouseout="undoToggling(this)"
            class="category-button text-decoration-none rounded-left btn-outline-danger my-2 px-2 py-1 border border-danger">
                General
        </a>
        <a href="/business" id="/business" onmouseover="toggleSelected(this)" onmouseout="undoToggling(this)"
            class="category-button text-decoration-none btn-outline-danger my-2 px-2 py-1 border border-danger">
                Business
        </a>
        <a href="/entertainment" id="/entertainment" onmouseover="toggleSelected(this)" onmouseout="undoToggling(this)"
            class="category-button text-decoration-none btn-outline-danger my-2 px-2 py-1 border border-danger">
                Entertainment
        </a>
        <a href="/health" id="/health" onmouseover="toggleSelected(this)" onmouseout="undoToggling(this)"
            class="category-button text-decoration-none btn-outline-danger my-2 px-2 py-1 border border-danger">
                Health
        </a>
        <a href="/science" id="/science"  onmouseover="toggleSelected(this)" onmouseout="undoToggling(this)"
            class="category-button text-decoration-none btn-outline-danger my-2 px-2 py-1 border border-danger">
                Science
        </a>
        <a href="/sports" id="/sports"  onmouseover="toggleSelected(this)" onmouseout="undoToggling(this)"
            class="category-button text-decoration-none btn-outline-danger my-2 px-2 py-1 border border-danger">
                Sports
        </a>
        <a href="/tech" id="/tech" onmouseover="toggleSelected(this)" onmouseout="undoToggling(this)"
            class="category-button text-decoration-none rounded-right btn-outline-danger my-2 px-2 py-1 border border-danger">
                Technology
        </a>
    </div>
{% endmacro %}
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <link rel="stylesheet" href="{{asset('/css/custom.css')}}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="container">
            <nav class="navbar navbar-expand-sm">
                <div class="row w-100">
                    <div class="col-5">
                        <a href="{{path('index')}}" class="text-decoration-none">
                            {# <img class="img-fluid navbar-brand" src="{{asset('/images/globe.png')}}"> #}
                            <div class="bg-danger p-2 text-white border rounded d-inline-block brand">
                                <h1 class="m-0 text-right h4">
                                    ONLY
                                    <span class="bg-white border rounded text-danger pr-1 pl-1 my-auto font-weight-bold">NEWS</span>
                                </h1>
                            </div>
                        </a>
                    </div>
                    <div class="col-7 float-right align-middle my-auto pr-0">
                        <form method="POST" action="/search"
                            class="form-inline my-2 float-right"> 
                            <input class="border-danger rounded-left p-1" type="text" name="query" 
                                placeholder="search by keyword" required>
                            <button class="btn-outline-danger text-white bg-danger my-2 my-sm-0 p-1 rounded-right font-weight-bold" 
                                type="submit"> 
                                â†µ
                            </button>
                        </form>
                    </div>
                </div>
            </nav>
            {{_self.displayCategories()}}
            {% block body %}{% endblock %}
        </div>
        <script src="{{asset('/js/button-animation.js')}}"></script>
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
